extends layout 

block content 
  h1 #{title}: #{item.name} 
  p $#{item.price}

  p Do you want to delete this Item?

  form(method='POST' action='')
    div.form-group
      input#itemid.form-control(type='hidden', name='itemid', required='true', value=item._id)

      button.btn.btn-primary(type='submit') Delete
