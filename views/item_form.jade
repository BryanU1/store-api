extends layout 

block content 
  h1  #{title}

  form(method='POST' action = '')
    div.form-group
      label(for='name') Name: 
      input#name.form-control(type='text' name='name' value=(undefined===item ? '' : item.name))
    div.form-group
      label(for='imgUrl') Image URL:
      input#imgUrl.form-control(type='text' name='imgUrl' value=(undefined===item ? '' : item.imgUrl))
    div.form-group
      label(for='price') Price: 
      input#price.form-control(type='number' step='0.01' name='price' value=(undefined===item ? '' : item.price))
    div.form-group  
      label Category: 
      div 
        for category in categories 
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(
              type='checkbox', 
              name='category',
              id=category._id,
              value=category._id,
              checked=category.checked
            )
            label(for=category._id) #{category.name}
    button.btn.btn-primary(type='submit') Submit 

  if errors 
    ul 
      for error in errors 
        li!= error.msg  